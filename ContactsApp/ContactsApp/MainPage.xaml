<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsApp.MainPage">

  <StackLayout Padding="10" Spacing="10">
    <Label Text="Name"/>
    <Entry Text="{Binding Name}" Placeholder="Full Name"/>
    
    <Label Text="Website"/>
    <Entry Text="{Binding Website}" Placeholder="Your Website"/>
    
    <StackLayout Orientation="Horizontal" Spacing="10">
      <Label Text="Best Friend?"/>
      <Switch IsToggled="{Binding BestFriend}"/>
      <Label Text="Worst Enemy?"/>
      <Switch IsToggled="{Binding WorstEnemy}"/>
    </StackLayout>
    
    <Label Text="{Binding DisplayMessage}"/>
    
    <Button Text="Open Website" Command="{Binding LaunchWebsiteCommand}"/>
    <Button Text="Save Contact" Command="{Binding SaveContactCommand}"/>

    <Label Text="Company Name"/>
    <Entry Text="{Binding CompanyName}" Placeholder="Your Company"/>
    <Label Text="Revenue"/>
    <Entry Text="{Binding Revenue}" Placeholder="Your Revenue"/>

    <Label Text="{Binding DisplayCompanyMessage}"/>
    
    <ActivityIndicator IsRunning="{Binding IsBusy}"/>
    
  </StackLayout>

</ContentPage>